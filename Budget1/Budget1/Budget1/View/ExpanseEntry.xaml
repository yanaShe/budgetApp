<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Budget1.View.ExpanseEntry">
  <StackLayout>
  <StackLayout Padding ="10" Orientation="Vertical">
    <Entry
            x:Name="Category"
            Placeholder="Category" />
    <Entry
      x:Name="Thing"
      Placeholder="Thing" />
    <Entry
      x:Name="Price"
      Placeholder="Price" />  
  </StackLayout>
  <StackLayout Orientation="Horizontal">
    <Button x:Name="Save" Text="Save" Clicked="OnSave"></Button>
    <Button x:Name="Cancel" Text="Cancel" Clicked="OnCancel"></Button>
    <Button x:Name="Review" Text="Review" Clicked="OnReview"></Button>
    <Button x:Name="Delete" Text="Delete" Clicked="OnDelete"></Button>
  </StackLayout>
  </StackLayout>
    </ContentPage>